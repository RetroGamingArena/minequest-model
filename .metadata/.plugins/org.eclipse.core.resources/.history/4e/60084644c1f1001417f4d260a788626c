[for (aClass : Class | aPackage.ownedElement)]
	[if (aPackage.name.equalsIgnoreCase('Model'))]
		[file (aClass.name.concat('.h'), false, 'UTF-8')]
		[/file]
		[file (aClass.name.concat('.cpp'), false, 'UTF-8')]
			[if (aClass.name.equalsIgnoreCase('main'))]
